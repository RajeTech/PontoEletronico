<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fundo"
    android:orientation="vertical">

        <Chronometer
            android:id="@+id/txtCordenada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00" />

        <TextView
            android:id="@+id/tvContadorParadaCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvdataInicioJornada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da Jornada:"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="113dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInicioJornada"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_weight="0"
                android:background="@drawable/iniciojornada"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                tools:ignore="Suspicious0dp" />

            <Button
                android:id="@+id/btnParadaCliente"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@drawable/paradacliente"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:visibility="invisible"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnParadaAlmoco"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_weight="0"
                android:background="@drawable/paradaalmoco"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:visibility="invisible"
                tools:ignore="Suspicious0dp" />

            <Button
                android:id="@+id/btnRetornoAlmoco"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@drawable/retornaalmoco"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:visibility="invisible"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnParadaPernoite"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_weight="0"
                android:background="@drawable/paradapernoite"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:visibility="invisible"
                tools:ignore="Suspicious0dp" />

            <Button
                android:id="@+id/btnFimJornada"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0"
                android:background="@drawable/fimjornada"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:visibility="invisible"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtlembrete"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Última Ação:"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

</LinearLayout>